<?xml version="1.0"?>

<vml version="1.0">

<node-object id="n3" name="sphere">
	<transform>
		<position>0.0 0.0 0.0</position>
		<rotation>0.0 0.0 0.0 1.0</rotation>
		<scale>1.0 1.0 1.0</scale>
	</transform>
	<links>
		<link node="n2" label="geometry" target="0"/>
	</links>
</node-object>

<node-geometry id="n2" name="sphere-geo">
	<layers>
		<!-- At the bare mesh level, this is a cube. It turns to a sphere
		     thanks to having its creases set to "all smooth", below. -->
		<layer-vertex-xyz name="vertex">
			<v>0 -0.5 1.0 -0.5</v>
			<v>1  0.5 1.0 -0.5</v>
			<v>2 -0.5 1.0  0.5</v>
			<v>3  0.5 1.0  0.5</v>
			<v>4 -0.5 0.0 -0.5</v>
			<v>5  0.5 0.0 -0.5</v>
			<v>6 -0.5 0.0  0.5</v>
			<v>7  0.5 0.0  0.5</v>
		</layer-vertex-xyz>
		<layer-polygon-corner-uint32 name="polygon">
			<p>0 1 3 2</p>
			<p>5 4 6 7</p>
			<p>2 3 7 6</p>
			<p>0 4 5 1</p>
			<p>0 2 6 4</p>
			<p>3 1 5 7</p>
		</layer-polygon-corner-uint32>
		<!-- All zeroes here, makes the vertices smooth. -->
		<layer-vertex-uint32 name="vcrease">
			<v>0  0</v>
			<v>1  0</v>
			<v>2  0</v>
			<v>3  0</v>
			<v>4  0</v>
			<v>5  0</v>
			<v>6  0</v>
			<v>7  0</v>
		</layer-vertex-uint32>
		<!-- All zeroes here too, for smooth edges. -->
		<layer-polygon-corner-uint32 name="pcrease">
			<p>0  0 0 0 0</p>
			<p>1  0 0 0 0</p>
			<p>2  0 0 0 0</p>
			<p>3  0 0 0 0</p>
			<p>4  0 0 0 0</p>
			<p>5  0 0 0 0</p>
		</layer-polygon-corner-uint32>
	</layers>
	<!-- Set the crease layers. We could use the 'default' attribute instead,
	     and not need the explicit layers, but this example wants to be very
	     explicit with the crease data. -->
	<vertexcrease layer="vcrease"/>
	<edgecrease layer="pcrease"/>
</node-geometry>

</vml>
